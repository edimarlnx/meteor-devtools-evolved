#!/usr/bin/env bash

function develop() {
  npm start
}

function setup() {
  echo "Installing extension dependencies..."
  npm install

  echo "Installing development app dependencies..."
  cd devapp
  npm install

  echo "Running development environment for the first time."
  cd ..
  npm start
}

function update-meteor() {
  cd devapp
  meteor update
  cd ..
}

function build() {
  npm run build
}

