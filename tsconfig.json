{
  "compilerOptions": {
    "strict": false,
    "noImplicitAny": false,
    "target": "ES6",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "jsx": "react",
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src/*.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}
